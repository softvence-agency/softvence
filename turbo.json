{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "apps/**/*.ts",
        "apps/**/*.tsx"
      ]
    },

    "test": {
      "dependsOn": ["lint"],
      "inputs": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "apps/**/*.ts",
        "apps/**/*.tsx"
      ]
    },

    "clean": {
      "dependsOn": ["^clean"]
    },

    "transit": {
      "dependsOn": ["^transit"]
    },

    "build:packages": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"],
      "cache": false
    },

    "build": {
      "dependsOn": ["test"],
      "outputs": ["dist/**"]
    },

    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
